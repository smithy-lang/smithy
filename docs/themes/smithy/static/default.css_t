/* ----- Layout ------ */

html {
  font-family: 'Open Sans', sans-serif;
}

/* Base scaffolding taken from Markswatch theme */
body {
  color: #24292e;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial,
    sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-size: 16px;
  line-height: 1.5;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  word-wrap: break-word;
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}

/* Utility class used in things like hidden form fields */
.hidden {
  display: none;
}

#site-container {
  color: #24292e;
}

blockquote {
  padding: 0 0 0 1.5em;
  margin: 0 2rem 1rem 0;
  color: #777;
  border-left: 0.5rem solid #eee;
}

.width-wrapper  {
  max-width: 1100px;
  margin: auto;
  position: relative;
  padding: 0 1em;
}

/* ----- Headings ------ */

h1, h2, h3, h4, h5, h6 {
  color: #000;
  line-height: 1.25;
  margin-bottom: 16px;
  margin-top: 2rem;
  font-weight: 600;
}

h1 {
  margin-top: 0;
  margin-top: 0;
  font-size: 2.5em;
  border-bottom: 1px solid #eaecef;
  padding-bottom: 0.3em;
}

h2 {
  font-size: 2.1em;
  padding-bottom: 0.3em;
  border-bottom: 1px solid #eaecef;
}

h3 {
  font-size: 1.8em;
}

h4 {
  font-size: 1.6em;
  font-weight: normal;
}

h5 {
  font-size: 1.3em;
  font-weight: normal;
}

h6 {
  font-size: 1em;
  font-weight: bold;
}

h7 {
  font-size: 0.85em;
  font-weight: bold;
}

/* ----- Landing page ------ */

#splash {
  padding: 2em 0;
  background: {{ theme_color }};
  color: #fff;
}

#splash > .width-wrapper > p {
  margin: 1em auto;
  max-width: 800px;
}

#splash h1 {
  font-size: 2.5em;
  font-weight: bold;
  margin-bottom: 12px;
  color: #fff;
  border: none;
  padding: 0;
  text-align: center;
}

.headline {
  font-weight: 400;
  color: #fff;
  font-size: 24px;
}

@media (max-width: 600px) {
  #splash h1 {
    font-size: 1.5em;
  }
  #splash .headline {
    font-size: 18px;
  }
}

.splash-links {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 2em;
  width: 400px;
  margin: auto;
}

.splash-links a {
  display: inline-block;
  border: 1px solid #fff;
  border-radius: 6px;
  padding: 12px;
  color: #fff;
  text-align: center;
  margin-bottom: 1em;
  font-weight: 500;
}

.splash-links a:hover {
  color: {{ theme_link_color }};
  text-decoration: none;
  background: #fff;
}

/* Make the splash links render better on smaller screens. */
@media (max-width: 600px) {
  .splash-links {
    display: block;
    width: auto;
    margin-top: 1em;
  }
  .splash-links a {
    margin-right: 18px;
  }
}

#landing-container h2 {
  text-align: center;
  font-size: 2em;
  margin: 1em 0;
}

.list-header {
  color: {{ theme_color }};
  font-weight: bold;
  font-size: 110%;
  margin-bottom: 12px;
}

.landing-list {
  list-style-type: none;
}

.landing-list > li {
  margin-bottom: 1em;
  padding-bottom: 1em;
  position: relative;
}

/* ----- Visual separations ------ */

#page-container {
  padding: 3rem 2rem 2rem 2em;
  background: #fff;
  flex: 1;
}

/* Make document and right nav left and right aligned columns. */
#page-container > .width-wrapper {
  display: flex;
  flex-flow: row;
}

#landing-container {
  padding: 0 0 2em 0;
  min-height: 500px;
  background: #fff;
}

#page-container p,
#landing-container p {
  margin: 1em 0;
}

#page-container li > p.first:last-child,
#landing-container li > p.first:last-child {
  margin-bottom: 0;
}

dt {
  margin-bottom: 0.5em;
}

dd {
  margin-left: 2em;
}

hr {
  height: 0.25em;
  padding: 0;
  margin: 24px 0;
  background-color: #e1e4e8;
  border: 0;
}


/* ----- Anchors ------ */

a {
  color: {{ theme_link_color }};
  text-decoration: none;
}

a:hover, .reference.external:hover {
  text-decoration: underline;
}

.reference.external {
  text-decoration: underline dotted #ccc;
}

/* First title (h1) on the page */
.headerlink {
  margin-left: 1em;
  display: none;
}

*:hover > .headerlink {
  display: inline-block;
}


/* ----- Header and footer ------ */

header {
  display: block;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 1px 2px #ccc;
  z-index: 1;
  flex: none;
}

#header-nav {
  padding: 10px 1em;
  align-items: center;
  display: flex;
  list-style: none;
}

#header-nav li {
  cursor: pointer;
}

#header-nav .site-logo {
  height: 26px;
  line-height: normal;
  position: relative;
}

#header-nav .site-logo a {
  color: {{ theme_color }};
  font-weight: 500;
  font-size: 22px;
  line-height: 22px;
}

#header-nav .site-logo a:hover {
  text-decoration: none;
}

#header-nav .site-logo .logo-text {
  padding-left: 35px;
}

#header-nav .site-logo .logo-icon {
  padding: 2px 3px 2px 4px;
  border-radius: 6px;
  color: transparent;
  text-shadow: 0 0 0 #fff;
  position: absolute;
  top: -1px;
  background: #1F73D7;
  font-size: 18px;
  background: {{ theme_color }};
}

#header-nav .site-page.first {
  margin-left: 40px;
}

#header-nav .site-page {
  font-size: 0.9em;
  line-height: 1.8;
  margin-right: 0 18px 0 0;
}

#header-nav .site-page a {
  display: block;
  padding: 0 1em;
  color: #333;
  border-radius: 12px;
}

#header-nav .site-page a:hover {
  color: #fff;
  background: {{ theme_color }};
  text-decoration: none;
}

#header-nav .site-search {
  margin-top: 3px;
  margin-left: auto;
}

#header-nav .site-search .search-input {
  padding: 0 1em;
  color: #777;
  border: solid 1px rgba(23, 30, 38, 0.2);
  border-radius: 3px;
  width: 180px;
  font-size: 0.9em;
  border-radius: 10px;
}

#header-nav .site-search button {
  border: none;
  padding: 5px 10px;
  background-color: #fff;
  color: #777;
}

footer {
  border-top: 6rem solid #fff;
  background: #303c42;
  padding: 3em;
  color: hsla(0, 0%, 100%, .4);
  font-size: 0.85em;
  min-height: 200px;
}

.copyright {
  text-align: center;
  width: 100%;
}

/* ----- Tables ------ */

table {
  border-spacing: 0;
  border-collapse: collapse;
  border-width: 1px;
  border-color: #e8e8e8;
  border-style: solid;
  width: 100%;
  margin: 0 0 1rem 0;
}

tr {
  border-bottom: 1px solid #e8e8e8;
}

tr.row-even {
  background-color: #f7f7f7;
}

th {
  text-align: left;
  padding: 1.2rem 1.6em;
  vertical-align: top;
}

td, th {
  padding: 8px 16px;
  border: none;
  border-right: 1px solid #e8e8e8;
}

/* Field list tables */

table.field-list {
  margin: 2em 0;
}

table.field-list th {
  background-color: #fff;
  color: #24292e;
  border-right: 1px solid #e8e8e8;
  min-width: 0;
}

/* hlist tables */

table.hlist {
  border: none;
}

.hlist > tbody > tr {
  border-bottom: none;
}

.hlist > tbody > tr > td {
  border-right: 1px solid #ccc;
  vertical-align: top;
  padding-right: 12px;
}

.hlist > tbody > tr > td > ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.hlist > tbody > tr > td:last-child {
  border-right: none;
}

/* ----- Code and pre ------ */

code {
  padding: 0.2em 0.4em;
  margin: 0;
  font-size: 85%;
  background-color: rgba(27, 31, 35, 0.05);
  border-radius: 3px;
}

pre {
  padding: 16px;
  overflow: auto;
  line-height: 1.45;
  background-color: #f6f8fa;
  border-radius: 3px;
  font-size: 14px;
}

code, pre {
  font-family: "SFMono-Regular",Consolas,"Liberation Mono",Menlo,Courier,monospace;
}

a code {
  color: {{ theme_link_color }};
}


/* ----- Tables with line numbers (..code directives) ------ */

table.highlighttable {
  margin: 0.5em 0 2em 0;
  width: 100%;
  overflow: auto;
  display: block;
  border: none;
  background-color: #f6f8fa;
}

.highlighttable pre {
  box-shadow: none;
}

table.highlighttable td {
  border: none;
  padding: 0;
}

table.highlighttable td.linenos {
  border-right: 1px solid #ccc;
  width: 20px; /* This will enlarge if needed. */
  text-align: right;
}

table.highlighttable tr {
  border-bottom: none;
}

table.highlighttable td.linenos pre {
  padding-left: 0.8em;
  color: #999;
}

table.highlighttable pre {
  margin: 0;
}

.code-block-caption .caption-text {
  font-style: italic;
  color: #666;
}

.code-block-caption:hover .headerlink {
  visibility: visible;
  opacity: 100;
}


/* ------- Misc. -------- */

/* RFC directive styling */
.rfc strong {
  font-weight: normal;
}

/* Table of contents "title" */
.topic-title {
  font-weight: 300;
  color: #777;
}

/* -------- Document ---------- */
/* TODO: These columns styles are convoluted. */

.side-column {
  min-height: 100px;
  position: static;
  flex: 0 0 350px;
  top: 0;
}

.column-body {
  position: sticky;
  top: 30px;
  overflow: auto;
}

#document-body {
  padding: 0 3.5rem 0 0;
  min-height: 300px;
  flex: auto;
  overflow: hidden;
}

#right-column {
  font-size: 14px;
}

#right-column > .column-body > .sidebar {
  border-left: 1px solid {{ theme_color }};
  padding-left: 1em;
}

#right-column > .column-body > .sidebar > ul > li > a {
  font-weight: bold;
  color: {{ theme_color }};
}

#right-column > .column-body > .sidebar > ul > li > ul {
  margin: 8px 0 0 0;
}

#sidebar-navigation {
  font-size: 15px;
  padding-right: 1em;
}

#sidebar-navigation ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#sidebar-navigation li {
  margin-bottom: 8px;
}

#sidebar-navigation ul ul {
  margin: 8px 0 0 1em;
}

#sidebar-navigation a {
  color: rgba(0, 0, 0, 0.87);
  display: block;
}

#right-column a {
  color: #387894;
}

#right-column a {
  color: rgba(0, 0, 0, 0.87);
  display: block;
}

#right-column a code {
  color: rgba(0, 0, 0, 0.87);
}

#right-column h3 {
  font-size: 1em;
  line-height: 1.2em;
  font-weight: 200;
  margin: 0 0 1em 0;
}

#right-column ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#right-column ul ul {
  margin: 0 0 0 1em;
}

#right-column li {
  margin-bottom: 5px;
}

.side-column a {
  border-bottom: 1px solid rgba(0, 0, 0, 0);
}

.side-column a.current {
  border-bottom: 1px solid {{ theme_color }};
  font-weight: bold;
}

/* -- admonitions ----------------------------------------------------------- */

.admonition {
  margin: 20px 0;
  padding: 0 1em 0.2em 1em;
  background-color: #fff;
  box-shadow: 1px 1px 1px #eee;
}

.admonition dt {
  font-weight: bold;
}

.admonition dl {
  margin-bottom: 0;
}

.admonition-title {
  margin: 0px 0 5px;
  padding: 0;
  font-size: 1.2em;
  line-height: 1.1;
}

.admonition.danger,
.admonition.error {
  border-left: 8px solid #d9534f;
}

.admonition.danger .admonition-title,
.admonition.error .admonition-title {
  color: #d9534f;
}

.admonition.important,
.admonition.warning,
.admonition.attention,
.admonition.caution {
  border-left: 8px solid #9B581F;
}

.admonition.important .admonition-title,
.admonition.warning .admonition-title,
.admonition.attention .admonition-title,
.admonition.caution .admonition-title {
  color: #9B581F;
}

.admonition.note,
.admonition.hint {
  border-left: 8px solid #31708f;
}

.admonition.note .admonition-title,
.admonition.hint .admonition-title {
  color: #31708f;
}

.admonition.tip {
  border-left: 8px solid #3c763d;
}

.admonition.tip .admonition-title {
  color: #3c763d;
}

div.seealso {
  background-color: #ffc;
  border: 1px solid #ff6;
}

div.admonition tt.xref, div.admonition a tt {
  border-bottom: 1px solid #fafafa;
}

div.admonition p.last {
  margin-bottom: 0;
}


/* -- search page ----------------------- */

ul.search {
  margin: 10px 0 0 20px;
  padding: 0;
  list-style: none;
}

ul.search li {
  padding: 5px 0 5px 20px;
  background: url(file.png) no-repeat 0 7px;
}

ul.search li a {
  font-weight: bold;
}

ul.search li div.context {
  color: #888;
  margin: 2px 0 0 30px;
  text-align: left;
}

ul.keywordmatches li.goodmatch a {
  font-weight: bold;
}

dt:target, .highlighted {
    background-color: #fbe54e;
}

/* -------- Page relations (bottom next/previous links) ------- */

.relations {
  margin-top: 2em;
  padding-top: 2em;
  display: flex;
}

.relations .previous-page {
  margin-right: auto;
}

.relations .next-page {
  margin-left: auto;
}

.relations a {
  display: block;
  color: {{ theme_link_color }};
  border-radius: 2px;
  border: 1px solid {{ theme_link_color }};
  padding: 0.8rem 1em;
  transition: background .25s, color 0.25s;
}

.relations a:hover {
  color: #fff;
  background: {{ theme_link_color }};
  text-decoration: none;
}

/* -------- media query helpers ------- */

@media (max-width: 1100px) {
    #right-column { display: none; }
    #page-container { padding: 1.5em; }
}

@media (max-width: 991px) {
  #left-column { font-size: 0.8em; }
  .hidden-sm, tr.hidden-sm, th.hidden-sm, td.hidden-sm {
    display: none !important
  }
}

@media (max-width: 767px) {
  #document-body { padding: 0; }
  .hidden-xs, tr.hidden-xs, th.hidden-xs, td.hidden-xs {
    display: none !important
  }
}

@media (max-width: 600px) {
  /* Make the header navigation usable on a small screen. */
  #header-nav {
    display: block;
    align-items: left;
  }

  #header-nav .logo-icon {
    display: none;
  }

  #header-nav .site-logo .logo-text {
    padding-left: 16px;
  }

  #header-nav .site-page.first {
    margin-left: 0;
    margin-top: 0.5em;
  }

  /* Don't show the hover anchor links when too small as it will often cause the links to jump around. */
  *:hover > .headerlink {
    display: none;
  }
}

/* ------- Make tables scroll on smaller screens. ------ */

@media (max-width: 992px) {
  table {
    display: block;
    width: 100%;
    overflow-x: auto;
    -ms-overflow-style: -ms-autohiding-scrollbar;
  }
}

/* ------- Printer friendly styling ------ */

@media print{
  /* Hide the header, footer, relations, and table of contents */
  header, footer, .relations, .contents { display: none; }

  /* Make text and padding a lot tighter */
  body {
    font-size: 12px;
    line-height: 1.1;
  }

  h1, h2, h3, h4, h5, h6 {
    margin-top: 1.5em;
  }

  .sphinx-tabs {
    margin: 0.5em 0 !important;
  }

  /* Hide code-tab tabs */
  .tabular {
    display: none !important;
  }

  #document-body { padding: 0; height: 100%; }

  .hidden-xs, tr.hidden-xs, th.hidden-xs, td.hidden-xs {
    display: none !important
  }
}
